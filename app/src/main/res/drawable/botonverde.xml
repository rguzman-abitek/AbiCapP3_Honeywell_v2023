<?xml version="1.0" encoding="utf-8"?>

    <selector
        xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#0FEB42"
                android:centerColor="#0FEB42"
                android:endColor="#14D214"
                android:angle="270" />
            <corners android:radius="5dp" />
            <stroke android:width="2px" android:color="#0FEB42" /></shape>
    </item>

    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#007000"
                android:centerColor="#007000"
                android:endColor="#007000"
                android:angle="270" />
            <corners android:radius="5dp" />
            <stroke android:width="2px" android:color="#007000" /></shape>
    </item>

    </selector>


