<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#FF1493"
                android:centerColor="#C71585"
                android:endColor="#800080"
                android:angle="270" />
            <corners android:radius="5dp" />
            <stroke android:width="2px" android:color="#483D8B" /></shape>
    </item>

    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#483D8B"
                android:centerColor="#483D8B"
                android:endColor="#483D8B"
                android:angle="270" />
            <corners android:radius="5dp" />
            <stroke android:width="2px" android:color="#007000" /></shape>
    </item>

</selector>


