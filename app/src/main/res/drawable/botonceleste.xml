<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#0DEAFA"
                android:centerColor="#17A3AE"
                android:endColor="#0E6970"
                android:angle="270" />
            <corners android:radius="5dp" />
            <stroke android:width="2px" android:color="#0E6970" /></shape>
    </item>

    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#0B0F75"
                android:centerColor="#0B0F75"
                android:endColor="#0B0F75"
                android:angle="270" />
            <corners android:radius="5dp" />
            <stroke android:width="2px" android:color="#0B0F75" /></shape>
    </item>

</selector>


