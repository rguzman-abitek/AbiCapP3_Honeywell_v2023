<?xml version="1.0" encoding="utf-8"?>

    <selector
        xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#1C22D7"
                android:centerColor="#1419B1"
                android:endColor="#0B0F75"
                android:angle="270" />
            <corners android:radius="5dp" />
            <stroke android:width="2px" android:color="#0B0F75" /></shape>
    </item>

    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#7A0101"
                android:centerColor="#7A0101"
                android:endColor="#7A0101"
                android:angle="270" />
            <corners android:radius="5dp" />
            <stroke android:width="2px" android:color="#0B0F75" /></shape>
    </item>

    </selector>


