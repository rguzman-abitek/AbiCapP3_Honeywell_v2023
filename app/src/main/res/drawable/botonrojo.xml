<?xml version="1.0" encoding="utf-8"?>

    <selector
        xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#FC0000"
                android:centerColor="#FC0000"
                android:endColor="#BA0606"
                android:angle="270" />
            <corners android:radius="5dp" />
            <stroke android:width="2px" android:color="#FC0000" /></shape>
    </item>

    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#7A0101"
                android:centerColor="#7A0101"
                android:endColor="#7A0101"
                android:angle="270" />
            <corners android:radius="5dp" />
            <stroke android:width="2px" android:color="#7A0101" /></shape>
    </item>

    </selector>


