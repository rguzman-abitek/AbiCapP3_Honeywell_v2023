<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_generar_archivo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.camilodesarrollo.abicap.GenerarArchivo">

    <Button
        android:text="Generar Archivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGenerarArchivoF"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGenerarArchivoF"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:id="@+id/pgb"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@+id/tvProgeso"
        android:layout_alignBottom="@+id/tvProgeso"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEstatico"
        android:textStyle="normal|bold"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:layout_marginStart="14dp"
        android:layout_alignBaseline="@+id/textView20"
        android:layout_alignBottom="@+id/textView20"
        android:layout_toEndOf="@+id/textView20" />

    <Button
        android:text="Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnMenuPrincipalG"
        android:background="@drawable/botonazul"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold" />

    <TextView
        android:text="000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/tvProgeso"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:textAlignment="textEnd"
        android:layout_below="@+id/pgb"
        android:layout_toStartOf="@+id/textView20" />
</RelativeLayout>
