<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_miscelaneos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.camilodesarrollo.abicap.Miscelaneos">


    <TextView
        android:id="@+id/textView28"
        android:layout_width="151dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="76dp"
        android:text="MiscelÃ¡neos"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <Button
        android:text="MENU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnMenuPrincipalMiscelaneos"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/botonazul"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/txtIP1"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView28"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="3"
        android:nestedScrollingEnabled="true"
        android:nextFocusDown="@id/txtIP2" />

    <EditText
        android:id="@+id/txtIP4"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView28"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="45dp"
        android:layout_toEndOf="@+id/txtIP1"
        android:ems="10"
        android:inputType="number"
        android:maxLength="3"
        android:nextFocusDown="@id/txtPuerto" />

    <EditText
        android:id="@+id/txtIP3"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView28"
        android:layout_marginStart="66dp"
        android:layout_marginTop="52dp"
        android:layout_toEndOf="@+id/txtIP1"
        android:ems="10"
        android:inputType="number"
        android:maxLength="3"
        android:nextFocusDown="@id/txtIP4" />

    <TextView
        android:id="@+id/labelID"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView28"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="200dp"
        android:text="IP" />

    <EditText
        android:id="@+id/txtIP2"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView28"
        android:layout_marginStart="10dp"
        android:layout_marginTop="52dp"
        android:layout_toEndOf="@+id/txtIP1"
        android:ems="10"
        android:inputType="number"
        android:maxLength="3"
        android:nextFocusDown="@id/txtIP3" />

    <EditText
        android:id="@+id/txtPuerto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView28"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="45dp"
        android:ems="10"
        android:inputType="number"
        android:nextFocusDown="@id/txtIDCapt" />

    <TextView
        android:id="@+id/labelPuerto"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtIP1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="178dp"
        android:text="Puerto" />

    <EditText
        android:id="@+id/txtIDCapt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView28"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="234dp"
        android:layout_marginEnd="45dp"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/labelCapt"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPuerto"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="122dp"
        android:text="ID Capturador" />

    <Button
        android:id="@+id/btnGuardarMisc"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtIDCapt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/botonverde"
        android:text="GUARDAR"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_dark" />

</RelativeLayout>
