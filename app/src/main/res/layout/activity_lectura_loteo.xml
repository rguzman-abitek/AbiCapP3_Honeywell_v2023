<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lectura_loteo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.camilodesarrollo.abicap.LecturaLoteo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/btnMenuPrincipalLoteo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/botonazul"
            android:text="Menu"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/btnTotalUbicacionLoteo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/botonnaranja"
            android:text="Total"
            android:textStyle="normal|bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="193dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:text="Ubicación:"
                        android:textSize="20sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/tvUbicacionLoteo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView5"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:maxLength="12"
                        android:text="SxxCxxPxxAxx"
                        android:textSize="20sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnCambiarUbiLoteo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:text="Cambiar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btnCambiarUbiLoteo"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:text="Código"
                        android:textSize="20sp"
                        android:textStyle="normal|bold" />

                    <EditText
                        android:id="@+id/edCodigoLeidoLoteo"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView5"
                        android:layout_alignEnd="@+id/btnAgregarRegistro"
                        android:layout_alignParentStart="true"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnIngresarCodigoLoteo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edCodigoLeidoLoteo"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_weight="1"
                        android:background="@drawable/botonverde"
                        android:text="INGRESAR CÓDIGO"
                        android:textStyle="normal|bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="77dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btnMenuPrincipalLoteo"
                        android:layout_alignParentStart="true"
                        android:layout_weight="1"
                        android:text="Cantidad:"
                        android:textSize="20sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/tvCantidadLote"
                        android:layout_width="132dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="00000"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="103dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ingrese Cantidad:"
                        android:textSize="20sp"
                        android:textStyle="normal|bold" />

                    <EditText
                        android:id="@+id/edCantidadLoteo"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:background="@android:drawable/alert_light_frame"
                        android:gravity="center_vertical|center_horizontal"
                        android:inputType="numberDecimal"
                        android:maxLength="9"
                        android:numeric="integer"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="normal|bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewComentario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Comentario"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/editComentario"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:maxLength="1000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/btnAgregarRegistro"
                        android:layout_alignBottom="@+id/tvTotalCantidad"
                        android:layout_alignParentStart="true"
                        android:layout_weight="1"
                        android:text="Total:"
                        android:textSize="20sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/tvTotalCantidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/btnAgregarRegistro"
                        android:layout_toStartOf="@+id/tvTotalCantidad"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="0000000"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btnAgregarRegistro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="15dp"
                        android:width="10dp"
                        android:height="40dp"
                        android:background="@drawable/botonamarillo"
                        android:text="+"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textStyle="normal|bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDescripcionProductoLoteo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/btnTotalUbicacionLoteo"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_weight="1"
                        android:text="xx"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</RelativeLayout>
